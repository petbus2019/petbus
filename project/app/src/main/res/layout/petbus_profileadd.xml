<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".petbus_profileadd"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:id="@+id/topbar_lineralayout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_profileaddTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="@string/addpet"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="6dp"/>
        <ImageButton
            android:id="@+id/btn_profileaddBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:background="#00000000"
            android:clickable="false"
            android:layout_alignParentLeft ="true"
            android:src="@mipmap/arrarryleft_normal" />
        <ImageButton
            android:id="@+id/btn_profileaddAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:background="#00000000"
            android:clickable="false"
            android:layout_alignParentRight="true"
            android:src="@mipmap/add_normal" />
    </RelativeLayout>
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.petbus.tj.petbus.ui.info_fragment.infofragment"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btn_profileaddNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/infofinish"
        android:textSize="17dp"
        android:layout_marginBottom="20dp"/>

</LinearLayout>