<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_background"
    tools:context=".petbus_profilelist">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorWhite"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_profilelistTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/petprofile"
            android:textColor="@color/colorBlack"
            android:textSize="21sp" />

        <ImageButton
            android:id="@+id/btn_profilelistBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingRight="19dp"
            android:paddingLeft="19dp"
            android:background="@drawable/button_sector"
            android:src="@mipmap/back_btn" />

        <ImageButton
            android:id="@+id/btn_profilelistAdd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="19dp"
            android:paddingLeft="19dp"
            android:background="@drawable/button_sector"
            android:clickable="false"
            android:src="@mipmap/add_btn" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list_pet"
        android:background="@color/app_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/app_background"
        android:dividerHeight="13dp"
        android:layout_margin="16dp">
    </ListView>
</LinearLayout>