<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/app_background"
    tools:context=".petbus_firstvisit">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:text="@string/infofirstvisit"
        android:background="@color/colorWhite"
        android:textSize="21sp"
        android:gravity="center"/>
    <fragment
        android:layout_width="match_parent"
        android:layout_height="551dp"
        android:id="@+id/id_fragment_firstvisit"
        android:name="com.petbus.tj.petbus.ui.info_fragment.infofragment"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/btn_firstvisitNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/btn_save"
        android:background="@color/app_background"
        android:layout_marginBottom="20dp"/>
</LinearLayout>