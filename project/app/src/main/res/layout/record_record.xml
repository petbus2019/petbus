<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/app_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:background="@color/app_background"
        android:orientation="horizontal">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="99dp"
            android:gravity="right"
            android:layout_height="fill_parent"
            android:background="@color/colorWhrite"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/record_times"
                style="@style/diary_record_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="11:50"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="239dp"
            android:gravity="left"
            android:layout_height="fill_parent"
            android:layout_marginLeft="22dp"
            android:background="@color/colorWhrite"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recode_actioin_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="@string/fead"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@color/app_background"
        android:id="@+id/information_layout"
        android:orientation="horizontal">
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="#00000000"
                android:layout_marginBottom ="8dp"
                android:layout_marginLeft ="19dp"
                android:id="@+id/pet_list_layout"
                android:orientation="horizontal">
                <ImageView
                    android:gravity="center"
                    android:id="@+id/recode_image_4"
                    android:background="#00000000"
                    android:clickable="false"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    android:maxWidth="30dp"
                    android:minHeight="30dp"
                    android:minWidth="30dp"
                    android:layout_marginTop ="19dp"
                    android:layout_marginBottom ="16dp"
                    android:layout_marginLeft ="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/photo_normal" />
                <ImageView
                    android:gravity="center"
                    android:id="@+id/recode_image_3"
                    android:background="#00000000"
                    android:clickable="false"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    android:maxWidth="30dp"
                    android:minHeight="30dp"
                    android:minWidth="30dp"
                    android:layout_marginTop ="19dp"
                    android:layout_marginBottom ="16dp"
                    android:layout_marginLeft ="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/photo_normal" />
                <ImageView
                    android:gravity="center"
                    android:id="@+id/recode_image_2"
                    android:background="#00000000"
                    android:clickable="false"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    android:maxWidth="30dp"
                    android:minHeight="30dp"
                    android:minWidth="30dp"
                    android:layout_marginTop ="19dp"
                    android:layout_marginBottom ="16dp"
                    android:layout_marginLeft ="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/photo_normal" />
                <ImageView
                    android:gravity="center"
                    android:id="@+id/recode_image_1"
                    android:background="#00000000"
                    android:clickable="false"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    android:maxWidth="30dp"
                    android:minHeight="30dp"
                    android:minWidth="30dp"
                    android:layout_marginTop ="19dp"
                    android:layout_marginBottom ="16dp"
                    android:layout_marginLeft ="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/photo_normal" />
            </RelativeLayout>
            <ImageView
                android:id="@+id/record_action_icon"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:scaleType="center"
                android:maxHeight="45dp"
                android:maxWidth="45dp"
                android:minHeight="45dp"
                android:minWidth="45dp"
                android:layout_marginBottom ="18dp"
                android:src="@mipmap/fade" />
            <TextView
                android:id="@+id/recode_remark_text"
                android:layout_width="101dp"
                android:layout_height="68dp"
                android:textSize="12sp"
                android:layout_marginLeft="6dp"
                android:singleLine="false"
                style="@style/diary_remark_text"
                android:text="这个是日志" />
            <ImageView
                android:id="@+id/recode_petportrait_image"
                android:layout_width="101dp"
                android:layout_height="68dp"
                android:scaleType="center"
                android:adjustViewBounds="true"
                android:maxHeight="57dp"
                android:maxWidth="85dp"
                android:minHeight="57dp"
                android:minWidth="85dp"
                android:src="@mipmap/fade" />
    </LinearLayout>
</LinearLayout>