<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".petbus_profile">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:id="@+id/topbar_lineralayout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_profileTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="@string/petprofile"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="6dp"/>
        <ImageButton
            android:id="@+id/btn_profileBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:background="#00000000"
            android:clickable="false"
            android:layout_alignParentLeft ="true"
            android:src="@mipmap/arrarryleft_normal" />
        <ImageButton
            android:id="@+id/btn_profileAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:background="#00000000"
            android:clickable="false"
            android:layout_alignParentRight="true"
            android:src="@mipmap/add_normal" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list_pet"
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#00000000"></ListView>
</LinearLayout>