<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">#FFFFFFFF</item>
        <!-- <item name="android:windowBackground">@android:color/transparent</item> -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <!-- https://www.cnblogs.com/tommylemon/p/5700531.html -->

    <style name="headportrait">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:maxHeight">100dp</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:minWidth">100dp</item>
    </style>

    <style name="titlebar_text">
        <item name="android:textSize">23dp</item>
        <item name="android:textColor">#FF00FF</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="diary_date_text">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="diary_record_text">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="diary_remark_text">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="diary_addfragment_text">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>
